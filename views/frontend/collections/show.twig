{% extends 'layout/posts/default.twig' %}

{% block content %}
    <div class="section container row animated slideInRight">
        {% if posts %}
            <div class="gallery gallery-container">
                {% for p in posts %}
                    <article class="gallery-item" id="{{ p.id }}" style="background: {{ p.color }}">
                        <a href="{{ path('posts.show', {id: p.id, slug: p.slug}) }}" title="{{ p.name }}">
                            <img src="" data-src="{{ p.getSmallThumb() }}" title="{{ p.name }}" alt="{{ p.name }}">
                        </a>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="col offset-l3 l6 m12 s12 animated slideInRight">
                <div class="section center-align">
                    <h2 class="icon icon-picture red-txt center-align"></h2>
                    <h2 class="ui header divided center"> Aucune photo </h2>
                    <p>
                        cette collection ne présente actuellement aucune publication disponible,
                        les publications sont peut être en évaluation,
                        ceci pourrait prendre du temps, veuillez revenir plus tard
                    </p>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="fixed-action-btn {{ currentUser ? 'second' : '' }}">
        <a href="{{ path('collections') }}" class="btn-floating btn-large blue dark-2 waves-effect shadow-4">
            <i class="icon icon-tags"></i>
        </a>
    </div>
{% endblock %}
