{% extends 'layout/posts/default.twig' %}
{% import 'includes/form.twig' as form %}

{% block content %}
    <section class="section row">
        <div class="container">
           <div class="hide-on-med-and-down">
                {% include 'includes/right-aside.twig' %}
           </div>
            <section class="col nexted l6 m12 s12">
                <div class="grey dark-4 col l12 m12 s12">
                    <form action="" method="POST" enctype="multipart/form-data" data-action="upload">
                        <div class="row">
                            {{ form.inputFile('Ajouter une photo') }}
                            {{ form.input('title','Titre', 'text', errors.get('title'), post.get('title')) }}
                            <div class="col l12 m12 s12">
                                <select name="category">
                                    <option disabled="disabled" selected="selected">choisissez une cat√©gorie</option>
                                    {% for c in categories %}
                                        <option value="{{ c.id }}"><span class="grey-txt dark-4">{{ c.title }}</span></option>
                                    {% endfor %}
                                </select>
                            </div>
                            {{ form.textarea('content','Description', errors.get('content'), post.get('content')) }}
                            <div class="submit-button col s12">
                                <button type="submit" class="btn btn-flat waves-effect">Publier</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
            <div class="hide-on-med-and-down">
                {% include 'includes/menu-aside.twig' %}
            </div>
        </div>
    </section>
{% endblock %}
