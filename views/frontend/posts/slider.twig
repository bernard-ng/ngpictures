{% extends 'layout/blank.twig' %}

{% block content %}
    <div class="slider fullscreen">
        <ul class="slides">
            {% if posts %}
                {% for p in posts %}
                    <li id="{{ p.id }}" style="background: {{ p.color }}">
                        <img src="{{ p.getThumb() }}" title="{{ p.name }}" alt="{{ p.name }}">
                        <div class="caption center">
                            <h2 class="ui header white-txt">{{ p.name | upper | truncate(100) }}</h2>
                            <p>{{ p.description | truncate(150) }}</p>
                            <p>
                                <a href="{{ path('posts.show', {id: p.id, slug: p.slug}) }}" class="btn">
                                    Télécharger <span class="icon icon-download"></span>
                                </a>
                            </p>
                        </div>
                        <div class="bg"></div>
                    </li>
                {% endfor %}
            {% else %}
                <li id="reset">
                    <img src="{{ cacheBusting('/imgs/slider.jpg') }}">
                    <div class="caption center-align">
                        <h2 class="">Deep Shooting</h2>
                        <h6 class="light grey-text text-lighten-3">Aucune photo disponible </h6>
                    </div>
                    <div class="bg"></div>
                </li>
                <div class="fixed-action-btn">
                    <a href="{{ path('posts.slider') }}" class="btn-floating btn-large blue-grey dark-2 waves-effect shadow-4">
                        <i class="icon icon-retweet"></i>
                    </a>
                </div>
            {% endif %}
        </ul>
    </div>
    {% if posts %}
        <div class="fixed-action-btn">
            <a href="{{ path('posts.slider') }}?last={{ last }}" class="btn-floating btn-large blue-grey dark-2 waves-effect shadow-4">
                <i class="icon icon-right-open"></i>
            </a>
        </div>
    {% endif %}
    <div class="fixed-action-btn second">
        <a href="{{ path('posts') }}" class="btn-floating btn-large blue dark-2 waves-effect shadow-4">
            <i class="icon icon-th"></i>
        </a>
    </div>
{% endblock %}
