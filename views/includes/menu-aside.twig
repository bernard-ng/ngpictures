<aside class="row col nexted l3 m3 s12 animated slideInRight ">
    <div class="card light-card">
        {% if verse %}
            <div class="verse-panel transparent" data-action="verses" data-ajax="/verses">
                <div class="txt" data-content="txt">
                    {{ verse.text }}
                </div>
                <div class="ref" data-content="ref">
                    {{ verse.reference }}
                </div>
            </div>
        {% endif %}
        <div class="ui divided list">
            <ul class="collection transparent">
                {% for c in categories %}
                    <li class="collection-item waves-effect col s12 {{ c.title == posts[0] ? 'active' : '' }}">
                        <a href="{{ c.url }}">
                            <div style="margin: 10px">
                                <div class="collection-item-title">
                                    {{ c.title }}
                                    <span class="secondary-content"><i class="icon icon-right-open"></i></span>
                                </div>
                            </div>
                        </a>
                    </li>
                {% endfor %}
                <li class="collection-item waves-effect center-align">
                    <a href="/categories" class="btn btn-flat">
                        <div class="collection-item-title">
                            Toutes les Cat√©gories
                        </div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</aside>
