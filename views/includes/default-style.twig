<style type="text/css">

    .turbolinks-progress-bar {

        position: fixed;

        display: block;

        top: 0;

        left: 0;

        height: 4px;

        background: #0076ff;

        z-index: 9999;

        transition: width 300ms ease-out, opacity 150ms 150ms ease-in;

        transform: translate3d(0, 0, 0);

    }

</style>

<script type="text/javascript" src="{{ cacheBusting('/assets/js/lib/turbolinks.js') }}"></script>

<script type="text/javascript" src="../../public/sw.js"></script>

{% if constant('ENV') == 'production' %}

    <script>

        UpUp.start({

            'service-worker-url': 'sw.offline.js',

            'content-url': 'app.offline',

            'assets': [

                "{{ cacheBusting('/assets/css/style.css') }}",

                "{{ cacheBusting('/assets/js/turbolinks.js') }}",

                "{{ cacheBusting('/assets/js/jquery.min.js') }}",

                "{{ cacheBusting('/assets/js/app/materialize.js') }}",

                "{{ cacheBusting('/assets/js/app/app.init.js') }}",

                "{{ cacheBusting('/assets/js/app/app.ajax.js') }}",

                "{{ cacheBusting('/assets/js/app/app.js') }}",

                "{{ cacheBusting('/assets/js/app/app.data.js') }}"

            ]

        })

