{% extends 'layout/admin/default.twig' %}
{% import 'includes/form.twig' as form %}

{% block content %}
    <section class="section container row">
        <section class="section col l9 m12 s12">
            <h2 class="ui header">Editer une localisation</h2>
            <form action="" method="POST" class="card-panel grey dark-4">

                {{ form.input('name','name', 'text', errors.get('name'), post.get('name') ?? location.name ) }}
                {{ form.input('address','address', 'text', errors.get('address'), post.get('address')  ?? location.address ) }}
                {{ form.smallInput('lat','lat', 'text', errors.get('lat'), post.get('lat') ?? location.lat)  }}
                {{ form.smallInput('lng','lng', 'text', errors.get('lng'), post.get('lng') ?? location.lng) }}
                {{ form.input('type','type', 'text', errors.get('type'), post.get('type') ?? location.type) }}

                <div class="submit-button">
                    <button type="submit" class="btn btn-flat waves-effect">Editer&nbsp;<i class="icon icon-send"></i>
                    </button>
                </div>
            </form>
        </section>
        {% include 'includes/menu-aside.twig' %}
    </section>
{% endblock %}
