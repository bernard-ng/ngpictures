{% extends 'layout/admin/default.twig' %}
{% import 'includes/form.twig' as form %}

{% block content %}
    <section class="section container row">
        <section class="section col l9 m12 s12">
            <h2 class="ui header">Ajouter une localisation</h2>
            <form action="" method="POST" class="card-panel grey dark-4">

                {{ form.input('name','name', 'text', errors.get('name'), post.get('name')) }}
                {{ form.input('address','address', 'text', errors.get('address'), post.get('address')) }}
                {{ form.smallInput('lat','lat', 'text', errors.get('lat'), post.get('lat')) }}
                {{ form.smallInput('lng','lng', 'text', errors.get('lng'), post.get('lng')) }}
                {{ form.input('type','type', 'text', errors.get('type'), post.get('type')) }}

                <div class="col l12 m12 s12">
                    <select name="photographer">
                        <option disabled="disabled" selected="selected" value='0'>Choisir le photographe</option>
                        {% for p in photographers %}
                            <option value="{{ p.id }}"><span class="grey-txt dark-4">{{ p.name }}</span></option>
                        {% endfor %}
                    </select>
                </div>

                <div class="submit-button">
                    <button type="submit" class="btn btn-flat waves-effect">Ajouter&nbsp;<i class="icon icon-send"></i>
                    </button>
                </div>
            </form>
        </section>
        {% include 'includes/menu-aside.twig' %}
    </section>
{% endblock %}
