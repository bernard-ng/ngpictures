{% extends 'layout/posts/default.twig' %}

{% block content %}
    <section class="section container row">
        {% include 'includes/right-aside.twig' %}
        <div class="col nexted l9 m12 s12">
            {% for a in albums %}
                <div class="col nexted l3 m4 s12">
                    <div class="card" style="background-color: #100F0F">
                        <div class="card-image">
                            <a href="{{ a.url }}" class="waves-effect">
                                <img src="/imgs/default.jpeg" class="responsive-img" alt="">
                            </a>
                        </div>
                        <div class="card-content">
                        <span class="card-title ui header truncate">
                            {{ a.title }}
                        </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}