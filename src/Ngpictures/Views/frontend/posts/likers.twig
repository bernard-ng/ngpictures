{% extends 'layout/posts/default.twig' %}

{% block content %}
    <section class="section container row">
        {% for u in likers %}
        <div class="row nexted col l3 m6 s12">
                <div class="card-user card transparent hovercard hoverable">
                    <div class="cardheader" style="background: url('{{ u.avatarUrl }}')"></div>
                    <div class="avatar">
                        <a href="{{ u.accountUrl }}">
                            <img alt="{{ u.name }}" title="{{ u.name }}" src="{{ u.avatarUrl }}">
                        </a>
                    </div>
                    <div class="info">
                        <div class="title">
                            <a href="{{ u.accountUrl }}">{{ u.name }}</a>
                        </div>
                        <div class="desc truncate">{{ u.bio }}</div>
                        <div class="ui tiny horizontal divided list">
                            <div class="item">
                                <div class="content">
                                    <div class="header">1,35k&nbsp;Posts</div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="content">
                                    <div class="header">4,9k&nbsp;Abonnés</div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="content">
                                    <div class="header">12&nbsp;Abonnement</div>
                                </div>
                            </div>
                        </div>

                        {% if u.id != activeUser.id %}
                            <a href="{{ u.followingUrl }}" class="btn btn-flat">
                                {{ u.isFollowed ? "Se désabonner" : "S'abonner" }}
                            </a>
                        {% else %}
                            <button class="btn btn-flat disabled">
                                Se désabonner
                            </button>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}
