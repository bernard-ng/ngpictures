{% extends 'layout/users/default.twig' %}
{% import 'includes/form.twig' as form %}

{% block content %}
    <div class="row col l4 m4 s12">
        <div class="card-panel hoverable" id="signUpBox">
            <form method="POST" action="">
                <div class="row">
                    {{ form.input('name',"pseudo (nom d'utilisateur)",'text', errors.get('name'),post.get('name'))}}
                    {{ form.input('email','adresse mail','email', errors.get('email'), post.get('email'))}}
                    {{ form.input('password', 'Mot de passe', 'password', errors.get('password'), post.get('password')) }}
                    {{ form.input(
                        'password_confirm', "Mot de passe (confirmer)",
                        'password', errors.get('password_confirm'), post.get('password_confirm'))
                    }}

                    <div class="input-field col s12">
                        <div class="g-recaptcha" data-theme="dark" data-sitekey=" {{ constant('RECAPTCHA_SITE_KEY') }} "></div>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <p> En cr√©ant votre compte vous affirmez avoir lu et accepter nos
                            <a href="/privacy">Conditions d'utilisation</a>
                        </p>
                    </div>
                    <div class="input-field col s12">
                        <button type="submit-sign" class="btn btn-flat" id="sign" >Inscription</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
