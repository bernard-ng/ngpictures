{% extends 'layout/posts/default.twig' %}

{% block content %}
    <div class="section container row">
        {% if blog or posts or gallery %}
        <div class="col s12">
            {% for b in blog %}
                <div class="row nexted col s12 m3 l3">
                    <article class="card hoverable blue-grey dark-4">
                        <div class="card-image">
                            <img src="{{ b.smallThumbUrl }}" title="{{ b.title }}" alt="{{ b.title }}" class="activator">
                        </div>
                        <div class="card-reveal">
                            <span class="card-title">{{ b.title }}<i class="icon icon-cancel right"></i></span>
                            <div class="truncate">
                                {{ b.snipet }}
                            </div>
                            <a href="{{ b.url }}" class="btn btn-flat">Voir plus</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
            {% for g in gallery %}
                <div class="row nexted col s12 m3 l3">
                    <article class="card hoverable blue-grey dark-4">
                        <div class="card-image">
                            <img src="{{ g.smallThumbUrl }}" title="{{ g.name }}" alt="{{ g.name }}" class="activator">
                        </div>
                        <div class="card-reveal">
                            <span class="card-title">{{ g.name ?? g.title }}<i class="icon icon-cancel right"></i></span>
                            <div class="truncate">
                                {{ g.snipet }}
                            </div>
                            <a href="{{ g.url }}" class="btn btn-flat">Voir plus</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
            {% for p in posts %}
                <div class="row nexted col s12 m3 l3">
                    <article class="card hoverable blue-grey dark-4">
                        <div class="card-image">
                            <img src="{{ p.smallThumbUrl }}" title="{{ p.title }}" alt="{{ p.title }}" class="activator">
                        </div>
                        <div class="card-reveal">
                            <span class="card-title">{{ p.title }}<i class="icon icon-cancel right"></i></span>
                            <div class="truncate">
                                {{ p.snipet }}
                            </div>
                            <a href="{{ p.url }}" class="btn btn-flat">Voir plus</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
        {% else %}
            <div class="col offset-l3 l6 m12 s12 animated slideInRight">
                <div class="section center-align">
                    <h2 class="icon icon-tag red-txt center-align"></h2>
                    <h2 class="ui header divided center"> Aucune publication pour l'instant</h2>
                    <p>
                        cette Catégorie ne présente actuellement aucune publication disponible, les publications sont peut être en évaluation,
                        ceci pourrait prendre du temps, veuillez revenir plus tard
                    </p>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="fixed-action-btn second">
        <a href="/categories" class="btn-floating btn-large blue dark-2 waves-effect shadow-4">
            <i class="icon icon-tags"></i>
        </a>
    </div>
{% endblock %}